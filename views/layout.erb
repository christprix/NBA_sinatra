  <body>
      <!-- code a Hero / Banner section -->
  <div class="banner">
    <div class="container">
      <h1>
        NBA Playoff Tracker!
      </h1>
      <p>
        Track your favorite team and get minute to minute updates!
      </p>
      <a href="#" class="btn-green">
        View Today's Games!
      </a>
    </div>
  </div>
    <!-- code a "How it works" section -->
  <div class="container">
    <div class="row">
      <h2 style="margin-top: 30px; margin-bottom: 20px;">Today's Games</h2>
      <div class="cards">
        <div class="games-card" id="game-info">
          <div class="avatar">
          </div>
          <h2>Heat VS Nuggets</h2>
          <div class="avatar">
          </div>
        </div>
      </div>
    </div>
  </div>
    <!-- code a footer -->
  <div class="footer">
    <div class="links">
      <a href="#">
        <i class="fa-brands fa-github"></i>
      </a>
      <a href="#">
        <i class="fa-brands fa-facebook"></i>
      </a>
      <a href="#">
        <i class="fa-brands fa-linkedin"></i>
      </a>
    </div>
  </div>
